# Kalshi API Credentials
# Get these from https://kalshi.com/profile/api
KALSHI_API_KEY_ID=your_api_key_id_here
KALSHI_PRIVATE_KEY_PATH=/app/kalshi_private_key.key

# PostgreSQL Database
POSTGRES_USER=kalshi_user
POSTGRES_PASSWORD=change_this_to_secure_password
POSTGRES_DB=kalshi_detector
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL (update password to match above)
DATABASE_URL=postgresql://kalshi_user:change_this_to_secure_password@postgres:5432/kalshi_detector

# Redis
REDIS_URL=redis://redis:6379/0

# Backend Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Monitoring Settings
UPDATE_INTERVAL_SECONDS=300
DETECTION_INTERVAL_SECONDS=300
